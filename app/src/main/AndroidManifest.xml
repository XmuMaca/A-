<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="wxm.com.androiddesign" >

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".ui.MainActivity"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name=".ui.LoginActivity"
            android:label="@string/title_activity_login" >
        </activity>
        <activity
            android:name=".ui.UserAcitivity"
            android:label="@string/title_activity_user_acitivity" >
        </activity>
        <activity android:name=".ui.MyIntro" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ui.DetailActivity"
            android:label="@string/title_activity_detail" >
        </activity>
        <activity
            android:name=".LinkWebActivity"
            android:label="@string/title_activity_link_web" >
            <intent-filter>
                <!-- <action android:name="android.intent.action.MAIN" />
                 <category android:name="android.intent.category.DEFAULT" />-->
                <action android:name="android.intent.action.VIEW" />
                <category android:name="android.intent.category.BROWSABLE" />
                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.LAUNCHER" />
                <data
                    android:scheme="https"
                    android:host="app"/>
            </intent-filter>
        </activity>
    </application>

</manifest>
