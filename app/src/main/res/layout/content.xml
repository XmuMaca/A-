<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingTop="24dp"
    android:paddingRight="16dp"
    >

    <wxm.com.maca.widget.MyTextView
        android:paddingLeft="72dp"
        android:id="@+id/aty_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="活动内容"/>

    <LinearLayout
        android:paddingTop="16dp"
        android:paddingLeft="72dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_action_group"/>
        <wxm.com.maca.widget.MyTextView
            android:layout_marginLeft="6dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textSize="8sp"
            android:textColor="@color/gray"
            android:gravity="center_vertical"
            android:id="@+id/people"
            android:text="已有21人参加"/>
    </LinearLayout>

    <LinearLayout
        android:paddingTop="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="72dp">
        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/fab_gray"
            />
    </LinearLayout>

    <wxm.com.maca.widget.MyTextView
        android:paddingTop="16dp"
        android:layout_marginLeft="72dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="发起人"/>

    <RelativeLayout
        android:padding="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:src="@drawable/user_avatar"
            android:id="@id/user_photo" />
        <wxm.com.maca.widget.MyTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="最爱打雷姐"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@id/user_photo"
            android:layout_toEndOf="@id/user_photo"
            android:layout_marginLeft="18dp"
            android:layout_marginStart="18dp"
            android:id="@id/user_name" />
        <wxm.com.maca.widget.MyTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="少年吧啦啦啦啦"
            android:textSize="10sp"
            android:layout_below="@id/user_name"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_alignLeft="@id/user_name"
            android:layout_alignStart="@id/user_name"
            android:id="@+id/signal" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/gray"
            android:layout_below="@id/user_photo"
            android:layout_alignLeft="@id/signal"
            android:layout_alignStart="@id/signal" />
    </RelativeLayout>

    <wxm.com.maca.widget.MyTextView

        android:layout_marginLeft="72dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Ta还发布了"/>

</LinearLayout>