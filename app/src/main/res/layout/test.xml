<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DemoActivity" >

    <com.sothree.slidinguppanel.SlidingUpPanelLayout
        xmlns:sothree="http://schemas.android.com/apk/res-auto"
        android:id="@+id/sliding_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="bottom"
        sothree:umanoPanelHeight="68dp"
        sothree:umanoShadowHeight="4dp"
        sothree:umanoParalaxOffset="100dp"
        sothree:umanoDragView="@+id/dragView"
        sothree:umanoOverlay="true"
        sothree:umanoScrollableView="@+id/list">

        <!-- MAIN CONTENT -->
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <android.support.design.widget.CoordinatorLayout
                xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
                android:layout_height="match_parent" android:fitsSystemWindows="true"
                tools:context="wxm.com.androiddesign.ui.AtyDetailActivity">

                <android.support.design.widget.AppBarLayout android:layout_height="@dimen/detail_backdrop_height"
                    android:layout_width="match_parent" android:theme="@style/AppTheme.AppBarOverlay">

                    <android.support.design.widget.CollapsingToolbarLayout
                        android:id="@+id/collapsing_toolbar"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/detail_backdrop_height"
                        android:fitsSystemWindows="true"
                        app:contentScrim="?attr/colorPrimary"
                        app:layout_scrollFlags="scroll|exitUntilCollapsed"
                        >
                        <!--app:layout_scrollFlags="scroll|enterAlwaysCollapsed"-->

                        <!--app:layout_scrollFlags="scroll|enterAlways"-->
                        <ImageView
                            android:id="@+id/aty_photo"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/detail_backdrop_height"
                            android:scaleType="centerCrop"
                            android:fitsSystemWindows="true"
                            android:src="@drawable/wu"
                            app:layout_collapseMode="parallax"/>


                    </android.support.design.widget.CollapsingToolbarLayout>
                </android.support.design.widget.AppBarLayout>

                <!--<include layout="@layout/content_aty_detail" />-->

                <LinearLayout
                    app:layout_collapseMode="pin"
                    android:id="@+id/details_container"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    app:layout_behavior="@string/appbar_scrolling_view_behavior">
                    <include layout="@layout/toolbar" />
                    <LinearLayout
                        android:paddingBottom="16dp"
                        android:id="@+id/titleBar"
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/primary">


                        <TextView
                            android:layout_height="wrap_content"
                            android:layout_width="match_parent"
                            android:layout_marginBottom="0dp"
                            android:layout_marginLeft="72dp"
                            android:layout_marginRight="16dp"
                            android:text="怎样从政府高层的讲话中获取信息？"
                            android:id="@id/aty_name"
                            android:maxLines="4"
                            android:ellipsize="end"
                            android:textSize="18sp"
                            android:lineSpacingMultiplier="1.1"
                            android:fontFamily="@string/mdtp_sans_serif"
                            android:textColor="#deffffff"
                            />
                        <TextView android:layout_height="wrap_content"
                            android:layout_width="match_parent"
                            android:layout_marginLeft="72dp"
                            android:layout_marginRight="16dp"
                            android:text="下午 1:00 - 下午 1:45周三在room3"
                            android:id="@+id/aty_time"
                            android:maxLines="2"
                            android:ellipsize="end"
                            android:textSize="16sp"
                            android:textColor="#8affffff"
                            />
                    </LinearLayout>

                    <android.support.v4.widget.NestedScrollView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        >

                        <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">
                            <LinearLayout
                                xmlns:android="http://schemas.android.com/apk/res/android"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="vertical"
                                android:paddingTop="24dp"
                                android:paddingRight="16dp"
                                >

                                <wxm.com.androiddesign.widget.MyTextView
                                    android:paddingLeft="72dp"
                                    android:id="@+id/aty_content"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="高层讲话有一套语系。如果是纯粹讲话，必须结合讲话前三五个月的背景来听，讲话一般是对现象的解读和定调，算是向社会吹风。

如果是官方文件，如规划，纲要，指导意见。最重要的不是读文件本身，而是和该文件之前的相关文件放到一起读。看多了什么，少了什么，什么东西没提了，这样才能明白有什么变化，看出动态和趋势，才是学习政策精神的本事。

话说有高票答案讲文化体制改革的东西，因为业务相关，也多说两句。首先，文化产业和文化事业是两条线，不是一回事。文化产业是赚钱的东西，文化事业是托底的事情。原先的想法是两翼齐飞，并寄希望于文化产业拉消费和就业一把，但后来发现文化产业只赚吆喝不赚钱，问题还冒出一大堆。一句话，钱没挣到，反而把魂儿丢了。所以从十七届六中全会，到文化体制改革，但习总书记文艺座谈，到公共文化服务体系建设，到最新的政府工作报告，整体的变化趋势是文化产业越提越少，但要求托底的东西，要求价值观的东西越来越多。这就是政策走向的思路。如果你是商人，就可以从中看出未来政府需要采购和建设什么东西，如果是文艺工作者，就知道该创作什么样的剧目可以获奖，可以拿到补贴。如果是地方政府，就知道什么文化活动该办，什么不该办，变成自己的政绩。如果是社科学者，就知道要往人民日报发什么样的文章。如果是科研民工，就知道怎样结合自己的研究背景，编出一个美丽的故事，然后去各大部委换成项目。如果是换句官方的话说，这就叫紧密团结在以大大为首的党中央国务院周围。"/>

                                <LinearLayout
                                    android:paddingTop="16dp"
                                    android:paddingLeft="72dp"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content">
                                    <ImageView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:scaleType="centerCrop"
                                        android:src="@drawable/ic_action_group"/>
                                    <wxm.com.androiddesign.widget.MyTextView
                                        android:layout_marginLeft="6dp"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:textSize="8sp"
                                        android:textColor="@color/gray"
                                        android:gravity="center_vertical"
                                        android:id="@+id/people"
                                        android:text="已有21人参加"/>
                                </LinearLayout>

                                <LinearLayout
                                    android:paddingTop="16dp"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:paddingLeft="72dp">
                                    <View
                                        android:layout_width="match_parent"
                                        android:layout_height="0.5dp"
                                        android:background="@color/fab_gray"
                                        />
                                </LinearLayout>

                                <wxm.com.androiddesign.widget.MyTextView
                                    android:paddingTop="16dp"
                                    android:layout_marginLeft="72dp"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="发起人"/>

                                <RelativeLayout
                                    android:padding="16dp"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content">
                                    <de.hdodenhof.circleimageview.CircleImageView
                                        android:layout_width="36dp"
                                        android:layout_height="36dp"
                                        android:src="@drawable/wu"
                                        android:id="@id/user_photo" />
                                    <wxm.com.androiddesign.widget.MyTextView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:text="最爱打雷姐"
                                        android:layout_alignParentTop="true"
                                        android:layout_toRightOf="@id/user_photo"
                                        android:layout_toEndOf="@id/user_photo"
                                        android:layout_marginLeft="18dp"
                                        android:layout_marginStart="18dp"
                                        android:id="@id/user_name" />
                                    <wxm.com.androiddesign.widget.MyTextView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:text="少年吧啦啦啦啦"
                                        android:textSize="10sp"
                                        android:layout_below="@id/user_name"
                                        android:layout_alignParentRight="true"
                                        android:layout_alignParentEnd="true"
                                        android:layout_alignLeft="@id/user_name"
                                        android:layout_alignStart="@id/user_name"
                                        android:id="@+id/signal" />

                                    <View
                                        android:layout_width="match_parent"
                                        android:layout_height="0.5dp"
                                        android:background="@color/gray"
                                        android:layout_below="@id/user_photo"
                                        android:layout_alignLeft="@id/signal"
                                        android:layout_alignStart="@id/signal" />
                                </RelativeLayout>

                                <wxm.com.androiddesign.widget.MyTextView

                                    android:layout_marginLeft="72dp"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="Ta还发布了"/>

                            </LinearLayout>

                            <!--<LinearLayout-->
                                <!--android:layout_width="match_parent"-->
                                <!--android:layout_height="72dp"></LinearLayout>-->

                        </LinearLayout>

                    </android.support.v4.widget.NestedScrollView>
                </LinearLayout>


                <android.support.design.widget.FloatingActionButton android:id="@+id/fab"
                    android:layout_width="wrap_content" android:layout_height="wrap_content"
                    app:layout_anchorGravity="bottom|start|left" android:layout_margin="10dp"
                    app:layout_anchor="@id/titleBar"
                    app:fabSize="mini"

                    android:src="@drawable/ic_done" />

            </android.support.design.widget.CoordinatorLayout>

        </FrameLayout>

        <!-- SLIDING LAYOUT -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#ffffff"
            android:orientation="vertical"
            android:clickable="false"
            android:focusable="false"
            android:id="@+id/dragView">

            <LinearLayout
                android:id="@+id/header"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1231412"/>
            </LinearLayout>

            <ListView
                android:layout_below="@id/header"
                android:id="@+id/list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_above="@+id/comment"
                android:layout_weight="1">
            </ListView>

            <!--<android.support.v7.widget.RecyclerView xmlns:android="http://schemas.android.com/apk/res/android"-->
                <!--android:id="@+id/list"-->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_height="0dp"-->
                <!--android:layout_weight="1"-->
                 <!--/>-->
            <LinearLayout
                android:focusable="true" android:focusableInTouchMode="true"
                android:layout_width="0dp" android:layout_height="0dp"/>
            <!--<include layout="@layout/comment_layout"-->
                <!--/>-->
            <RelativeLayout
                android:id="@+id/comment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center|bottom"
                android:layout_alignParentBottom="true">

                <ImageView
                    android:id="@+id/imageView"
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="@color/gray" />

                <EditText
                    android:id="@+id/add_comment"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/imageView"
                    android:paddingRight="10dp"
                    android:layout_toLeftOf="@+id/cmt_comment"
                    android:layout_toStartOf="@+id/cmt_comment"
                    android:hint="添加评论" />

                <ImageView
                    android:id="@+id/cmt_comment"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/add_comment"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:src="@drawable/ic_action_send"
                    android:paddingRight="16dp"
                    android:layout_alignParentBottom="@+id/add_comment"
                    android:layout_below="@+id/imageView" />
            </RelativeLayout>
