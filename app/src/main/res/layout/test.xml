<?xml version="1.0" encoding="utf-8"?>
<wxm.com.androiddesign.widget.ObservableScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/scroll_view"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    android:overScrollMode="never"
    android:fillViewport="true"
    android:background="#fff"
    tools:showIn="@layout/activity_aty_detail"
    tools:context="wxm.com.androiddesign.ui.AtyDetailActivity">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/scroll_view_child"
        android:clipChildren="false">
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/session_photo_container">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/aty_photo"
                android:scaleType="centerCrop"/>
        </FrameLayout>

        <LinearLayout
            android:id="@+id/details_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#fff"
            android:paddingTop="16dp"
            android:paddingBottom="48dp"
            android:paddingRight="16dp"
            android:clipToPadding="false"
            android:orientation="vertical">

        </LinearLayout>

        <!--TileBar -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/header"
            android:clipToPadding="false"
            android:clipChildren="false"
            android:orientation="vertical"
            android:paddingBottom="16dp"></LinearLayout>
    </FrameLayout>

</wxm.com.androiddesign.widget.ObservableScrollView>
