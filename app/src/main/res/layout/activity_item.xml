<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fonts="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:elevation="5dp"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    card_view:cardElevation="5dp"
    android:clickable="true"
    card_view:contentPaddingBottom="10dp"
    android:id="@+id/card_view"
    card_view:cardUseCompatPadding="true"
    android:foreground="?android:attr/selectableItemBackground"
    android:transitionName="@string/transition_card"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        >
        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:id="@+id/user_photo"
            android:src="@drawable/miao"
            android:padding="10dp"
            android:layout_margin="10dp"
            android:clickable="true"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/user_name"
            android:text="user_name"
            android:layout_toRightOf="@id/user_photo"
            android:layout_centerVertical="true"
            android:textSize="@dimen/abc_text_size_body_1_material"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_toRightOf="@id/user_name"
            android:layout_centerVertical="true">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_action_play_arrow"
                android:background="?android:attr/selectableItemBackground"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tag"
                android:text="tag"
                android:clickable="true"
                android:textColor="@color/secondary_text_default_material_light"
                />
        </LinearLayout>
        <LinearLayout

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_alignParentRight="true"
            android:layout_centerInParent="true">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="活动时间"
            />
            <TextView
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/publish_time"
                android:text="5h"
                />
        </LinearLayout>

    </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="0.3dp"
            android:layout_marginBottom="10dp"
            android:background="#cccccc" />
        <RelativeLayout
            android:paddingLeft="22dp"
            android:layout_marginBottom="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/personview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_action_group"/>
            <TextView
                android:layout_toRightOf="@id/personview"
                android:layout_marginLeft="12dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""/>
            <Button
                android:id="@+id/join"
                android:clickable="true"
                android:background="@drawable/material_button"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_marginRight="16dp"
                android:layout_width="wrap_content"
                android:layout_height="22dp"
                android:text="加入"/>
        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="0.3dp"
            android:layout_marginBottom="10dp"
            android:background="#cccccc" />
        <wxm.com.androiddesign.widget.MyTextView
            android:id="@+id/aty_name"
            android:layout_below="@id/user_photo"
            android:paddingLeft="22dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="活动主题"
            fonts:typeface="Roboto-Bold.ttf"

            />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/aty_content"
        android:text="活动内容"
        android:layout_below="@id/user_photo"
        android:padding="22dp"/>
        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:showDividers="middle"
                android:divider="@drawable/divider"
                android:layout_alignParentBottom="true"
                android:id="@+id/imageViewContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"/>
        </HorizontalScrollView>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="10dp"
            >
            <android.support.design.widget.FloatingActionButton
                android:id="@+id/fab_plus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_action_plus_one"
                app:elevation="0dp"
                app:borderWidth="0dp"
                android:paddingRight="10dp"
                android:layout_alignParentLeft="true"
                app:fabSize="mini"
                app:backgroundTint="@color/fab_gray"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/total_plus"
                android:text=""
                android:paddingLeft="@dimen/abc_text_size_body_1_material"
                android:layout_toRightOf="@id/fab_plus"
                android:layout_centerInParent="true"
                />
            <LinearLayout
                android:layout_alignParentRight="true"
                android:layout_gravity="right"
                android:layout_marginRight="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

            <android.support.design.widget.FloatingActionButton
                android:id="@+id/fab_comment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_action_comment"
                app:elevation="0dp"
                app:borderWidth="0dp"

                app:fabSize="mini"
                app:backgroundTint="@color/fab_gray"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/total_comment"
                android:text=""
                android:layout_gravity="center"
                android:layout_alignParentRight="true"
                android:layout_centerInParent="true"
                android:paddingRight="5dp"
                android:paddingLeft="@dimen/abc_text_size_body_1_material"/>

            <android.support.design.widget.FloatingActionButton
                android:id="@+id/fab_share"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_action_share"
                app:elevation="0dp"
                app:borderWidth="0dp"

                app:fabSize="mini"
                app:backgroundTint="@color/fab_gray"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/total_share"
                android:text=""
                android:layout_gravity="center"
                android:layout_alignParentRight="true"
                android:layout_centerInParent="true"
                android:paddingRight="5dp"
                android:paddingLeft="@dimen/abc_text_size_body_1_material"/>

            </LinearLayout>
        </RelativeLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>
