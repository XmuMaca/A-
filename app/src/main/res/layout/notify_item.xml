<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="6dp"/>
    <android.support.v7.widget.CardView
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:paddingTop="6dp"
        android:foreground="?android:attr/selectableItemBackground"
        android:transitionName="@string/transition_card">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/img"
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:layout_margin="6dp"
                    android:src="@drawable/user_avatar" />
                <!--<wxm.com.androiddesign.widget.MyTextView-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="match_parent"-->
                <!--android:padding="6dp"-->
                <!--android:gravity="center"-->
                <!--android:background="@android:color/holo_red_dark"-->
                <!--android:textColor="@color/white"-->
                <!--app:typeface="Roboto-Bold.ttf"-->
                <!--android:textSize="20sp"-->
                <!--android:id="@+id/type"-->
                <!--android:text="系统"/>-->
                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="6dp"
                    android:layout_weight="1">

                    <TextView
                        android:id="@+id/time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentTop="true"
                        android:paddingRight="8dp"
                        android:paddingTop="3dp"
                        android:text="2013-10-01 20:12"
                        android:textSize="8sp" />

                    <wxm.com.androiddesign.widget.MyTextView
                        android:id="@+id/title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ellipsize="middle"
                        android:maxLines="2"
                        android:padding="16dp"
                        android:text="“某某”活动发来一条通知"
                        app:typeface="Roboto-Bold.ttf" />
                </RelativeLayout>
            </LinearLayout>

            <wxm.com.androiddesign.widget.MyTextView
                android:id="@+id/content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="65dp"
                android:paddingBottom="6dp"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:text="已过时，使用后面的”监听好友状态事件”里的方式：EMContactManager.getInstance().setContactListener(new EMContactListener())监听好友改变事件。" />
        </LinearLayout>
    </android.support.v7.widget.CardView>


</LinearLayout>